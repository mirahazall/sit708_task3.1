<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

    <TextView
        android:id="@+id/congratsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="200dp"/>

    <TextView
        android:id="@+id/yourScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/congratsTextView"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:text="YOUR SCORE:"/>

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yourScoreTextView"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="13dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/takeNewQuizButton"
        android:layout_below="@id/scoreTextView"
        android:layout_marginTop="50dp"
        android:text="Take New Quiz"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finishButton"
        android:layout_below="@id/takeNewQuizButton"
        android:layout_marginTop="10dp"
        android:text="Finish"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>